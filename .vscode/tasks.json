{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run FastAPI Server",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "uvicorn",
                "api.main:app",
                "--reload"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Build App",
            "type": "docker-build",
            "platform": "python",
            "dockerBuild": {
                "tag": "graphrag:latest",
                "dockerfile": "${workspaceFolder}/dockerfile",
                "context": "${workspaceFolder}",
                "platform": "linux/amd64"
            }
        }
    ]
}